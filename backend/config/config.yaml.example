# CESE-Qoder 生产环境配置示例
# 复制此文件为 config.yaml 并修改敏感信息

# 服务器配置
server:
  host: "0.0.0.0"           # 监听所有网卡
  port: 8080                # 监听端口
  mode: "release"           # 生产模式

# 数据库配置
database:
  host: "your-db-host"      # 替换为实际数据库地址
  port: 3306
  user: "your-db-user"      # 替换为实际数据库用户
  password: "your-db-pass"  # ⚠️ 替换为强密码
  dbname: "context_engine"
  charset: "utf8mb4"
  max_idle_conns: 20        # 生产环境建议 10-20
  max_open_conns: 200       # 生产环境建议 100-200
  conn_max_lifetime: 7200   # 2小时

# JWT 配置
jwt:
  secret: "PLEASE_CHANGE_THIS_TO_A_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG"  # ⚠️ 必须修改
  expire_hour: 24

# 日志配置
log:
  level: "error"                # 生产环境建议 error 或 warn
  file_path: "logs/app.log"     # 日志文件路径
  max_size: 100                 # 单个日志文件最大大小（MB）
  max_backups: 10               # 保留的旧日志文件数量
  max_age: 30                   # 保留旧日志文件的最大天数（天）
