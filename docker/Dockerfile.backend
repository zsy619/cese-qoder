# 使用最新版本的Golang官方镜像作为基础镜像
FROM golang:latest

# 安装必要的工具
RUN apk add --no-cache ca-certificates

# 设置工作目录
WORKDIR /app

# 复制go mod和sum文件
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY . .

# 创建非root用户
RUN adduser -D -s /bin/sh -u 1001 gouser

# 构建应用
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o main .

# 创建日志目录并设置权限
RUN mkdir -p /app/logs && chown gouser:gouser /app/logs

# 暴露端口
EXPOSE 8080

# 切换到非root用户
USER gouser

# 运行应用
CMD ["./main"]